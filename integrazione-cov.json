                     "type": "string"
                  }
               }
            ],
            "responses": {
               "200": {
                  "description": "Trovato cantiere",
                  "content": {
                     "application/json": {
                        "schema": {
                           "$ref": "#/components/schemas/Cantiere"
                        },
                        "example": {
                           "idtratta": "766",
                           "tipocantiere": "mobile",
                           "data": "2020-04-20",
                           "note": "",
                           "direzione": "venez",
                           "nomecantiere": "",
                           "tipolavorazione": "",
                           "ordinanza": "",
                           "progressivakm": "",
                           "corsiae": "",
                           "corsiam": "",
                           "corsiamv": "",
                           "corsias": "",
                           "coordinate": "",
                           "ditta": ""
                        }
