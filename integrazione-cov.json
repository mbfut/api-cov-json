      "/SetStato": {
         "post": {
            "operationId": "set_stato_cantiere",
            "summary": "Aggiorna lo stato di un cantiere",
            "tags": [
               "Cantieri\\SetStato"
            ],
            "requestBody": {
               "content": {
                  "application/setstato+json": {
                     "schema": {
                        "properties": {
                           "idcantiere": {
                              "description": "L'identificativo del cantiere.",
                              "example": "766",
                              "type": "string"
                           },
                           "stato": {
                              "description": "Lo stato del cantiere puÃ² essere aperto o chiuso.",
                              "example": "chiuso",
                              "type": "string"
                           },
                           "note": {
                              "description": "Note stato cantiere",
                              "example": "note chisura",
                              "type": "string"
                           }
                        },
                        "required": [
                           "idcantiere",
                           "stato"
                        ],
                        "type": "object"
                     }
                  }
               },
               "required": true
            },
            "responses": {
               "200": {
                  "description": "Aggiornato stato cantiere"
               },
               "400": {
                  "description": "Un parametro non Ã¨ valido."
               },
               "403": {
                  "description": "L'utente non puÃ² aggiornate lo stato."
               }
            }
         }
      },
